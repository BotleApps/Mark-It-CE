{
  "manifest_version": 3,
  "name": "Mark it - Memory Manager",
  "short_name": "Mark It",
  "version": "1.0.5",
  "description": "Boost your productivity with Mark It, a modern memory manager for Chrome. Save and organize your bookmarks easily",
  "permissions": [
    "bookmarks",
    "tabs",
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mark It - Quick Save Bookmark"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [{
    "resources": ["assets/*"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
